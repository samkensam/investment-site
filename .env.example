# Django Settings
# SECURITY WARNING: Keep the secret key used in production secret!
# Generate a new secret key for production: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-change-this-in-production

# SECURITY WARNING: Don't run with debug turned on in production!
DEBUG=True

# Allowed hosts (comma-separated). Example: localhost,127.0.0.1,yourdomain.com
ALLOWED_HOSTS=127.0.0.1,localhost

# Database Configuration
# For SQLite (default for development)
DATABASE_ENGINE=django.db.backends.sqlite3
DATABASE_NAME=db.sqlite3

# For PostgreSQL (production)
# Uncomment and configure these when using PostgreSQL:
# DATABASE_ENGINE=django.db.backends.postgresql
# DATABASE_NAME=your_database_name
# DATABASE_USER=your_database_user
# DATABASE_PASSWORD=your_database_password
# DATABASE_HOST=localhost
# DATABASE_PORT=5432

# Email Configuration (optional - for notifications)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password

# Static Files (optional - for production)
# STATIC_ROOT=/path/to/staticfiles

# Time Zone
# TIME_ZONE=UTC

# Language Code
# LANGUAGE_CODE=en-us
